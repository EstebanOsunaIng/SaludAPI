<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NuevaCitaPage"
             Title="Nueva Cita">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry x:Name="PacienteEntry" Placeholder="Nombre del Paciente" />
            <Entry x:Name="DoctorEntry" Placeholder="Nombre del Doctor" />
            <DatePicker x:Name="FechaPicker" />
            <TimePicker x:Name="HoraPicker" />
            <Entry x:Name="MotivoEntry" Placeholder="Motivo de la cita" />

            <Button Text="Guardar" Clicked="OnGuardarClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
