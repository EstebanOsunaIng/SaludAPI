<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaludAPI.NuevaCitaPage"
             Title="Nueva Cita">
    <StackLayout Padding="20">
        <Entry x:Name="PacienteEntry" Placeholder="Nombre del paciente" />
        <DatePicker x:Name="FechaPicker"/>
        <Entry x:Name="MotivoEntry" Placeholder="Motivo de la cita" />
        <Button Text="Guardar" Clicked="OnGuardarClicked"/>
    </StackLayout>
</ContentPage>
